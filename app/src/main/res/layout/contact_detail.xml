<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profile_pic_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

    </com.facebook.drawee.view.SimpleDraweeView>

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_favorite_black_24dp"
        android:layout_toLeftOf="@+id/name"
        android:layout_alignBottom="@+id/name"
        />

    <TextView android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic_detail"
        android:paddingTop="10dp"
        android:textColor="@color/grey_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/call_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_call_black_24dp"
        android:layout_toLeftOf="@+id/phone"
        android:layout_alignBottom="@+id/phone"/>

    <TextView android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:paddingTop="10dp"
        android:textColor="@color/grey_light"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:clickable="true" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_toLeftOf="@+id/email"
        android:layout_alignBottom="@+id/email"/>

    <TextView android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:paddingTop="10dp"
        android:textColor="@color/grey_light"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp" />
</RelativeLayout>